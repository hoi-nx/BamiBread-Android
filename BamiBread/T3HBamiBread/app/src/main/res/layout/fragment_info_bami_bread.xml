<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/bami"
                android:id="@+id/rl1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#80FFEBEE">
                    <TextView
                        android:id="@+id/name_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88B Trần Hưng Đạo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#D50000"
                        android:textSize="25dp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_action_phone"
                    android:id="@+id/img_phone_store"/>

                <TextView
                    android:id="@+id/txt_phone_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0988872930"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@+id/img_phone_store"/>


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_action_time"
                    android:layout_below="@+id/img_phone_store"
                    android:id="@+id/time"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6:30-22:30"
                    android:textSize="20dp"
                    android:layout_below="@+id/txt_phone_store"
                    android:layout_toRightOf="@+id/time"
                    android:textColor="@color/colorAccent"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map1"
                android:id="@+id/img_map_bami"
                android:scaleType="centerCrop"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>